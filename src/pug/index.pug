doctype html
html(lang='en')

    head
        meta(charset='utf-8')

        // Making sure the web-site will scale fine on mobiles
        meta(name='viewport', content='width=device-width, initial-scale=1.0')

        // Trying to force IE to perform at its best
        meta(http-equiv='x-ua-compatible', content='ie=edge')

        // Meta description, aim for about 150 characters
        meta(name='description', content='This theme is a very beautiful and minimalistic theme with a gorgeous animation that will make the user remember your website and want to come back.')

        // Stylesheets
        link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Roboto+Mono')
        link(rel='stylesheet', href='./libs/pace/themes/black/pace-theme-flash.css')
        link(rel='stylesheet', href='./libs/materialize/materialize.min.css')
        link(rel='stylesheet', href='./assets/css/linea.min.css')
        link(rel='stylesheet', href='./assets/css/oona.min.css?v=2')

        // Favicons
        link(rel='apple-touch-icon', sizes='180x180', href='favicons/apple-touch-icon.png')
        link(rel='icon', type='image/png', href='favicons/favicon-32x32.png', sizes='32x32')
        link(rel='icon', type='image/png', href='favicons/favicon-16x16.png', sizes='16x16')
        link(rel='manifest', href='favicons/manifest.json')
        link(rel='shortcut icon', href='favicon.ico')
        meta(name='msapplication-config', content='favicons/browserconfig.xml')
        meta(name='theme-color', content='#ffffff')

        // Site title
        title Oona

    body
        // Navigation
        include layout/_nav

        // Main container where all the pages are going to be loaded
        main#main

        // Footer
        include layout/_footer

        // Libraries
        script(src='./libs/pace/pace.min.js')
        script(src='./libs/js-logger/logger.min.js')
        script(src='./libs/jquery/jquery.min.js')
        script(src='./libs/ajax-navi/ajax-navi.min.js')
        script(src='./libs/materialize/materialize.min.js')

        // Oona scripts
        script(src='./assets/js/config.js')
        script(src='./assets/js/oona.js')